{{ header }}{{ column_left }} 
<div id="content"><div class="container-fluid">
    <div class="page-header">
        <h1>{{ text_blog_dashboard }}</h1>
        <ul class="breadcrumb">
             {% for breadcrumb in breadcrumbs %} 
              <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
              {% endfor %} 
        </ul>
      </div>
    
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:600,500,400' rel='stylesheet' type='text/css'>
    
    
    {% if (error_warning) %} 
        <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    {% elseif (success) %} 
        <div class="alert alert-success"><i class="fa fa-exclamation-circle"></i> {{ success }} 
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    {% endif %} 
    
    {{ handy_box }} 
    
        <div class="set-size" id="blog">
            <div class="content">
                <div>
                    <div class="page-title">{{ text_blog_dashboard }}</div>
                    <div class="dashboard">
                        <ul>
                            <li><a href="{{ link_add_edit_categories }}" class="icon-category"><span>{{ text_add_edit_categories}}</span></a></li>
                            <li><a href="{{ link_add_edit_articles }}" class="icon-article"><span>{{ text_add_edit_articles}}</span></a></li>
                            <li><a href="{{ link_add_edit_authors }}" class="icon-author"><span>{{ text_add_edit_authors}}</span></a></li>
                            <li><a href="{{ link_add_edit_comments }}" class="icon-comment"><span>{{ text_add_edit_comments}}</span></a></li>
                            <li><a href="{{ link_general_settings }}" class="icon-settings"><span>{{ text_general_settings}}</span></a></li>
                        </ul>
                        
                    </div>
                    <div class="modules">
                        <div class="title">{{ text_modules }}:</div>
                        <ul>
                            <li><a target="_blank" href="{{ link_blog_category }}"><span style="max-width: 80px">{{ text_blog_category }}</span></a></li>
                            <li><a target="_blank" href="{{ link_blog_search }}"><span style="max-width: 60px">{{ text_blog_search }}</span></a></li>
                            <li><a target="_blank" href="{{ link_blog_latest_post }}"><span style="max-width: 80px">{{ text_blog_latest_post }}</span></a></li>
                            <li><a target="_blank" href="{{ link_blog_popular_post }}"><span style="max-width: 80px">{{ text_blog_popular_post }}</span></a></li>
                            <li><a target="_blank" href="{{ link_blog_product_related_post }}"><span style="max-width: 110px">{{ text_blog_product_related_post }}</span></a></li>
                            <li><a target="_blank" href="{{ link_blog_popular_tags }}"><span style="max-width: 80px">{{ text_blog_popular_tags }}</span></a></li>
                        </ul>
                    </div>
                    
                </div>
            </div>
            <div class="hint">
                {{ text_blog_front_information }} 
            </div>
        </div>
</div>
<script type="text/javascript">
$(document).ready(function() {

});
</script>
{{ footer }}