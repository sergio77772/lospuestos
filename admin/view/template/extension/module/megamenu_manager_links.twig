{{ header }}{{ column_left }} 
<div id="content"><div class="container-fluid">
	<div class="page-header">
	    <h1>MegaMenu Manager Links</h1>
	    <ul class="breadcrumb">
		     {% for breadcrumb in breadcrumbs %} 
		      <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
		      {% endfor %} 
	    </ul>
	  </div>
   <link href='https://fonts.googleapis.com/css?family=Poppins:700,600,500,400,300' rel='stylesheet' type='text/css'>
    
   
	{% if (error_warning) %} 
		<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
		  <button type="button" class="close" data-dismiss="alert">&times;</button>
		</div>
	  {% else %} 
	  {% if (success) %} 
	  <div class="alert alert-success"><i class="fa fa-exclamation-circle"></i> {{ success }} 
	    <button type="button" class="close" data-dismiss="alert">&times;</button>
	  </div>
	  {% endif %} {% endif %} 
	
	<!-- Camera slider -->
	<div class="set-size" id="megamenu-manager-links">		
			<!-- Content -->
			<div class="content">
				<div>
					<div class="bg-tabs clearfix">
						<div class="tab-content">
							<table id="module-placement">
								<thead>
									<tr>
										<td class="first" style="width:700px">Name</td>
										<td>Edit</td>
										<td>Delete</td>
									</tr>
								</thead>
								<tbody>
									{% for link in links %} 
									<tr>
										<td class="first">{{ link['name_for_autocomplete'] }}</td>
										<td><a href="{{ link_url~'&link_id='~link['id'] }}">Edit</a></td>
										<td><a href="{{ link_url~'&link_id='~link['id']~'&delete=true' }}" onclick="return confirm('Are you sure you want to delete?')">Remove</a></td>
									</tr>
									{% endfor %} 
								</tbody>
							</table>
						</div>
					</div>
					
					<div>
						<!-- Buttons -->
						<div class="buttons"><a href="{{ link_url }}" class="button-add-link">Create new link</a></div>
					</div>
				</div>
			</div>		
	</div>
</div>

{{ footer }}