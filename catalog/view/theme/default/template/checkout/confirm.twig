<style>
table,  td {
    border: hidden !important;
}
</style>

{% if not redirect %}
<div class="table-responsive " style="white-space: normal;" >
<div style="text-align: center;" >
<img src="../image/logo_ticket.png" style="max-width: 150px;"><img>
<br>
<p class="subrayado">TICKET DE COMPRA.</p>

<div>
  <table class="table table-bordered table-hover">
    <thead>
      <tr style="display:none;">
       <td class="text-right">{{ column_quantity }}</td> 
        <td class="text-left">{{ column_name }}</td>
        {# <td class="text-left">{{ column_model }}</td> #}
        <td class="text-right nowra" style="white-space:normal !important;" >{{ column_price }}</td>
        <td class="text-right nowra">{{ column_total }}</td>
      </tr>
    </thead>
    <tbody>
    
    {% for product in products %}
    <tr>
      <td class="text-right nowra">{{ product.quantity }} </td>
      <td class="text-left"><a href="{{ product.href }}">X   {{ product.name }}</a> {% for option in product.option %} <br />
        &nbsp;<small> - {{ option.name }}: {{ option.value }}</small> {% endfor %}
        {% if product.recurring %} <br />
        <span class="label label-info">{{ text_recurring_item }}</span> <small>{{ product.recurring }}</small> {% endif %}</td>
      {# <td class="text-left">{{ product.model }}</td> #}
     
      <td class="text-right nowra ">{{ product.price }}</td>
      <td class="text-right nowra">{{ product.total }}</td>
    </tr>
    {% endfor %}
    {% for voucher in vouchers %}
    <tr>
      <td class="text-left">{{ voucher.description }}</td>
      <td class="text-left"></td>
      <td class="text-right">1</td>
      <td class="text-right">{{ voucher.amount }}</td>
      <td class="text-right">{{ voucher.amount }}</td>
    </tr>
    {% endfor %}
      </tbody>
    
    <tfoot>
    
    {% for total in totals %}
    <tr>
      <td colspan="3" class="text-right"><strong>{{ total.title }}:</strong></td>
      <td class="text-right">{{ total.text }}</td>
    </tr>
    {% endfor %}
      </tfoot>
    
  </table>
<div style="text-align: center;" >
<img src="../image/finticket.png" style="max-width: 285px;"><img>
<br>
<div>

</div>
{{ payment }}
{% else %} 
<script type="text/javascript"><!--
location = '{{ redirect }}';
//--></script> 
{% endif %} 