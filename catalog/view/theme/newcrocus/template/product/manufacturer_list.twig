{{ header }} 
{% include 'newcrocus/template/new_elements/wrapper_top.twig' %}

{% if categories %}
<p><strong>{{ text_index }}</strong> {% for category in categories %}
  &nbsp;&nbsp;&nbsp;<a href="index.php?route=product/manufacturer#{{ category.name }}">{{ category.name }}</a> {% endfor %} </p>
{% for category in categories %}
<div class="manufacturer-list">
<div class="manufacturer-heading"><h2 id="{{ category.name }}">{{ category.name }}</h2></div>
<div class="manufacturer-content">
{% if category.manufacturer %}
{% for manufacturers in category.manufacturer|batch(4) %}
<div class="row"> {% for manufacturer in manufacturers %}
  <div class="col-sm-3"><ul style="width: 100% !important"><li><a href="{{ manufacturer.href }}">{{ manufacturer.name }}</a></li></ul></div>
  {% endfor %} </div>
{% endfor %}
{% endif %}
</div>
</div>
{% endfor %}
{% else %}
<p>{{ text_empty }}</p>
<div class="buttons clearfix">
  <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
</div>
{% endif %}

{% include 'newcrocus/template/new_elements/wrapper_bottom.twig' %}
{{ footer }}