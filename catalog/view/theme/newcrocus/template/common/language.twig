{% if (languages|length > 1) %} 
<!-- Language -->
<form action="{{ action }}" method="post" enctype="multipart/form-data" id="language_form">
	<div class="dropdown">
		{% for language in languages %} 
			{% if (language['code'] == code) %} 
			<a href="#" class="dropdown-toggle" data-hover="dropdown" data-toggle="dropdown">{{ language['name'] }}</a>
			{% endif %} 
		{% endfor %} 
		<ul class="dropdown-menu">
		  {% for language in languages %} 
		  <li><a href="javascript:;" onclick="$('input[name=\'code\']').attr('value', '{{ language['code'] }}'); $('#language_form').submit();">{{ language['name'] }}</a></li>
		  {% endfor %} 
		</ul>
	</div>
	
	<input type="hidden" name="code" value="" />
	<input type="hidden" name="redirect" value="{{ redirect }}" />
</form>
{% endif %} 
