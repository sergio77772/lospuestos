{% if (currencies|length > 1) %} 
<form action="{{ action }}" method="post" enctype="multipart/form-data" id="currency_form">
	<!-- Currency -->
	<div class="dropdown">
		{% for currency in currencies %} 
			{% if (currency['code'] == code) %} 
			<a href="#" class="dropdown-toggle" data-hover="dropdown" data-toggle="dropdown">{{ currency['symbol_left']~currency['symbol_right'] }}</a>
			{% endif %} 
		{% endfor %} 
		<ul class="dropdown-menu">
		  {% for currency in currencies %} 
		  <li><a href="javascript:;" onclick="$('input[name=\'code\']').attr('value', '{{ currency['code'] }}'); $('#currency_form').submit();">{{ currency['title'] }}</a></li>
		  {% endfor %} 
		</ul>
	</div>
	
    <input type="hidden" name="code" value="" />
    <input type="hidden" name="redirect" value="{{ redirect }}" />
</form>
{% endif %}